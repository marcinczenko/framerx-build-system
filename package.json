{
  "name": "framer-x-build-system",
  "version": "1.0.0",
  "description": "",
  "main": "lib/index.js",
  "scripts": {
    "dev": "yarn clean && webpack --colors --env dev",
    "watch": "yarn dev -w",
    "test": "mocha --require babel-register --colors ./test/*.spec.js",
    "test:watch": "mocha --require babel-register --colors -w ./test/*.spec.js",
    "clean": "rm -rf lib/",
    "build": "yarn clean && webpack --env build && yarn sync:lib",
    "sync:lib": "zip -d design-system.framerx lib/* && zip -ur design-system.framerx lib",
    "sync:umd": "zip -d design-system.framerx umd/* && zip -ur design-system.framerx umd",
    "sync:src": "unzip -o design-system.framerx design/* code/* -d src/",
    "sync:framerx": "cp _base.framerx design-system.framerx && zip -ur design-system.framerx lib/* && cd src/ && zip -ur ../design-system.framerx code/* design/* && cd ..",
    "precommit": "yarn sync:src"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-rc.3",
    "@babel/plugin-proposal-class-properties": "^7.0.0-rc.2",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-rc.3",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@babel/preset-react": "^7.0.0-rc.2",
    "@types/react": "16.4.7",
    "awesome-typescript-loader": "^5.2.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.0-beta.4",
    "babel-plugin-emotion": "^9.2.11",
    "babel-preset-env": "^7.0.0-beta.3",
    "babel-register": "^7.0.0-beta.3",
    "css-loader": "^1.0.0",
    "eslint": "^5.9.0",
    "file-loader": "^2.0.0",
    "husky": "^0.14.3",
    "less": "^3.8.1",
    "less-loader": "^4.1.0",
    "node-sass": "^4.10.0",
    "prop-types": "15.6.0",
    "react": "15.6.1",
    "sass-loader": "^7.1.0",
    "standard": "^12.0.1",
    "style-loader": "^0.23.0",
    "typescript": "2.x",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "url-loader": "^1.1.2",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2"
  },
  "author": "Datadog DesignOps Team <slack@#designops>, Marcin Czenko (extending with more features)",
  "license": "UNLICENSED",
  "dependencies": {
    "@cogitojs/cogito-react-ui": "^0.2.18",
    "@react-frontend-developer/react-layout-helpers": "^1.0.13",
    "@types/classnames": "^2.2.6",
    "classnames": "^2.2.6",
    "emotion": "^9.2.12",
    "glamor": "^2.20.40",
    "glamorous": "^4.13.1",
    "react-emotion": "^9.2.12",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.83.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
        "**/node_modules/**",
        "**/umd/**",
        "**/es/**",
        "**/lib/**",
        "**/build/**"
    ],
    "envs": [
        "es6",
        "browser",
        "jest"
    ]
  }
}
